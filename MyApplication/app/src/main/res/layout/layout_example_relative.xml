<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewApple"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageViewApple"
        android:id="@+id/imageViewOrange"
        android:src="@drawable/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewApple"
        android:id="@+id/imageViewStrawberry"
        android:src="@drawable/strawberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/imageViewOrange"
        android:layout_toRightOf="@+id/imageViewOrange"
        android:src="@drawable/circle"
        android:id="@+id/imageViewCirle"
        android:layout_width="60dp"
        android:layout_height="60dp"/>






</RelativeLayout>