<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewCover"
        android:layout_marginTop="@dimen/margin_header"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <SeekBar
        android:max="100"
        android:progress="20"
        android:id="@+id/seekbar"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </SeekBar>

    <FrameLayout
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin_2x"
        android:layout_marginRight="@dimen/margin_2x"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="0:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_gravity="right|top"
            android:text="5:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/buttonPlay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play_circle_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <ImageView
            android:layout_marginRight="@dimen/margin"

            android:layout_toLeftOf="@+id/buttonPlay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_skip_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <ImageView
            android:layout_marginLeft="@dimen/margin"
            android:layout_toRightOf="@id/buttonPlay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_skip_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


    </RelativeLayout>


</LinearLayout>